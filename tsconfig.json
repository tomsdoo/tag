{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
